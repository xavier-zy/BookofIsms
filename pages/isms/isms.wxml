<!--pages/isms/isms.wxml-->
<van-search value="{{ value }}" placeholder="请输入搜索关键词" use-action-slot bind:search="onSearch" bind:change="onInput" bind:clear="onClear">
  <view slot="action" bind:tap="onSearch">搜索</view>
</van-search>

<view scroll-y="true" class="scrollview" hidden="{{!showSuggest}}">
    <view wx:for="{{bindSource}}" wx:key="item">
      <view id="{{item}}" bindtap="itemtap" class="itemview">{{item}}</view>
    </view>
</view>

<view class="container">
  <!-- <van-cell title="展示弹出层" is-link bind:click="showPopup" />
  <van-popup show="{{ show }}" bind:close="onClose"> -->

  <van-collapse value="{{ activeName }}" bind:change="onChange" accordion>
    <block wx:for="{{dataList}}" wx:key="item">
      <van-collapse-item title-class="word" title="{{item.word}}" name="{{item.id}}">
        <van-cell title="{{item.explain}}"></van-cell>
      </van-collapse-item>
    </block>
  </van-collapse>

  <!-- <van-panel class="explain" title="{{dataList.word}}" desc="{{dataList.word}}" status="{{dataList.id}}">
      <view>{{dataList.explain}}</view>
    </van-panel>

  </van-popup> -->
  <menu tabNo="1"></menu>

</view>